{
    "compilerOptions": {
        "allowJs": true,
        "allowUnreachableCode": false,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": ["es6", "es2015", "es2017", "esnext", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "rootDir": "src",
        "baseUrl": "src",
        "sourceMap": true,
        "strictNullChecks": true,
        "strict": true,
        "pretty": true,
        "target": "es2016",
        "outDir": "dist"
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest"
    ],
    "types": ["typePatches", "node", "webpack-env"],
    "include": ["src/**/*"]
}
